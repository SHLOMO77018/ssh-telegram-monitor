# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_HERE
TELEGRAM_CHAT_ID=YOUR_CHAT_ID_HERE

# Telegram Group Configuration (for topics/threads)
TELEGRAM_GROUP_ID=-1003066710155

# 2FA Configuration
2FA_ENABLED=true
2FA_TIMEOUT=30
2FA_WHITELIST_IPS=

# Security Settings
MAX_ATTEMPTS=3
BLOCK_DURATION_HOURS=24

# File Paths (usually don't need to change)
LAST_LINE_FILE=/var/run/ssh_monitor_last_line
ATTEMPTS_DB=/var/run/ssh_attempts_db.json
BLOCKED_IPS_DB=/var/run/ssh_blocked_ips.json
CHAT_ID_FILE=/etc/telegram_chat_id.txt